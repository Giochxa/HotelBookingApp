@model HotelBookingApp.DTOs.RoomDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Room";
}

<h2>Create Room</h2>

<!-- IMPORTANT: enctype is required for file uploads -->
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HotelId">Hotel</label>
        <select asp-for="HotelId" class="form-control" asp-items="ViewBag.Hotels"></select>
        <span asp-validation-for="HotelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomTypeId">Room Type</label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypes"></select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaximumGuests"></label>
        <input asp-for="MaximumGuests" class="form-control" type="number" />
        <span asp-validation-for="MaximumGuests" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerNight"></label>
        <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label">Available</label>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Room Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>
