@model HotelBookingApp.ViewModels.RoomViewModel

@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/images/no-image.png" : Model.ImagePath)"
                 alt="@Model.Name"
                 class="img-fluid rounded shadow-sm"
                 onerror="this.onerror=null; this.src='/images/no-image.png';" />
        </div>

        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>
            <p><strong>Room Type:</strong> @Model.RoomTypeName</p>
            <p><strong>Price per Night:</strong> ₾ @Model.PricePerNight</p>
            <p><strong>Maximum Guests:</strong> @Model.MaximumGuests</p>
            <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

            <hr />

            <h5 class="mt-4">Hotel</h5>
            <div class="d-flex align-items-center">
                <img src="@(string.IsNullOrEmpty(Model.HotelImage) ? "/images/no-image.png" : Model.HotelImage)"
                     alt="@Model.HotelName"
                     class="me-2"
                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;"
                     onerror="this.onerror=null; this.src='/images/no-image.png';" />
                <strong>@Model.HotelName</strong>
            </div>

            <form asp-controller="Bookings" asp-action="Create" method="get">
                <input type="hidden" name="roomId" value="@Model.Id" />
                <input type="hidden" name="hotelId" value="@Model.HotelId" />
                <button type="submit" class="btn btn-success btn-lg">Book Now</button>
            </form>

        </div>
    </div>
</div>
