@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero">
    <div class="hero-content">
        <h1> Five Star Hotels </h1>
        <p>Best Way To Relax!</p>
        <a href="@Url.Action("Index", "Hotel")" class="btn btn-primary">SEE HOTELS</a>
    </div>
</div>

<!-- CSS for Styling -->
<style>
    .hero {
        background: url('/images/hotel-hero.jpg') no-repeat center center;
        background-size: cover;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .hero-content h1 {
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px black;
    }

    .hero-content p {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #e6007e;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: white;
        font-size: 1.2rem;
        transition: background 0.3s;
    }

    .btn-primary:hover {
        background-color: #c00065;
    }
</style>
